<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_success_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_success"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chúc mừng!!!!"
        android:textColor="@color/black"
        android:fontFamily="@font/robotoserif_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_sucess_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đơn hàng của bạn đã được đặt"
        android:fontFamily="@font/robotoserif_regular"
        android:textColor="@color/gray_text"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_track_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THEO DÕI ĐƠN HÀNG"
        android:fontFamily="@font/robotoserif_regular"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="25dp" />

</LinearLayout>