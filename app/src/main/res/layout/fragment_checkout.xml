<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/gray"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quay lại"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/blue"
            app:iconTint="@color/white"
            android:fontFamily="@font/robotoserif_regular"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_checkout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thanh toán"
            android:textSize="12dp"
            android:textColor="@color/blue"
            android:layout_marginStart="8dp"
            android:paddingVertical="12dp"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/blue"
            android:textAllCaps="false"
            app:icon="@drawable/ic_credit_card"
            app:iconTint="@color/blue"
            app:iconGravity="textStart" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Địa chỉ nhận hàng"
                    android:fontFamily="@font/robotoserif_regular"
                    android:textSize="18sp"
                    android:textColor="@color/gray_text"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_change_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="1dp"
                    android:fontFamily="@font/robotoserif_regular"
                    android:text="@string/thay_doi_checkout"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:src="@drawable/ic_location_gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nhà gia đình Tây"
                        android:textSize="16sp"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/gray_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ngõ 120 Yên Lãng"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textSize="16sp"
                        android:textColor="@color/gray"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ghi chú khi nhận hàng"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_regular"
                android:textColor="@color/gray_text"
                android:layout_marginBottom="8dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/rounded_border_background"
                android:gravity="top"
                android:fontFamily="@font/robotoserif_regular"
                android:text="Note... Note... Note..."
                android:padding="8dp"
                android:textColor="@color/blue"
                android:textSize="17sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textSize="18sp"
                android:fontFamily="@font/robotoserif_regular"
                android:textColor="@color/gray_text"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:id="@+id/payment_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_card"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/robotoserif_bold"
                    android:text="Thẻ"
                    android:textSize="11dp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/blue"
                    app:cornerRadius="8dp"
                    app:icon="@drawable/ic_creditcard"
                    app:iconTint="@color/white"
                    app:strokeWidth="0dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cash"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/robotoserif_bold"
                    android:text="Tiền mặt"
                    android:textSize="11dp"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    app:icon="@drawable/ic_money"
                    app:iconTint="@android:color/black"
                    app:strokeColor="#BDBDBD"
                    app:cornerRadius="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_momo"
                    style="?attr/materialButtonOutlinedStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:text="Momo"
                    android:textSize="11dp"
                    android:textAllCaps="false"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textColor="@android:color/black"
                    app:backgroundTint="@android:color/white"
                    app:icon="@drawable/ic_momo_logo"
                    app:iconTint="@null"
                    app:strokeColor="#BDBDBD"
                    app:cornerRadius="8dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_border_background"
                android:padding="16dp"
                android:layout_marginTop="12dp">

                <ImageView
                    android:id="@+id/iv_visa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_visa_logo"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** **** **** 2512"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_toEndOf="@id/iv_visa"
                    android:layout_marginStart="16dp"
                    android:layout_centerVertical="true"/>

                <ImageView
                    android:id="@+id/iv_edit_card"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_edit_pencil"
                    app:tint="@color/black"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:cardBackgroundColor="#E9E9E9"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_border_background_i"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thông tin đơn hàng"
                        android:textSize="18sp"
                        android:layout_marginStart="80dp"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textStyle="bold"
                        android:textColor="@color/gray_text"
                        android:layout_marginBottom="12dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tạm tính"
                            android:fontFamily="@font/robotoserif_regular"
                            android:textSize="16sp"
                            android:textColor="@color/gray"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="300.000 VNĐ"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="16sp"
                            android:textColor="@color/gray"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Phí vận chuyển"
                            android:textSize="16sp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/robotoserif_regular"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25.000 VNĐ"
                            android:textSize="16sp"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textColor="@color/gray"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng"
                            android:textSize="18sp"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textColor="@color/black"
                            android:layout_alignParentStart="true"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="325.000 VNĐ"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textColor="@color/black"
                            android:layout_alignParentEnd="true"/>
                    </RelativeLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>