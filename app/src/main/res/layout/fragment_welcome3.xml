<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:paddingHorizontal="20dp"
    android:background="@color/blue">

    <TextView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="• • —"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Bỏ qua -->
    <!--    <TextView-->
    <!--        android:id="@+id/btn_skip"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginTop="18dp"-->
    <!--        android:text="Bỏ qua >"-->
    <!--        android:textColor="#FFFFFF"-->
    <!--        android:textSize="22sp"-->
    <!--        android:fontFamily="@font/robotoserif_bold"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent" />-->

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:paddingHorizontal="40dp"
        android:fontFamily="@font/robotoserif_bold"
        android:gravity="center"
        android:text="Gợi ý thông minh, dành riêng cho bạn"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indicator" />

    <!-- Mô tả -->
    <TextView
        android:id="@+id/description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:gravity="center"
        android:fontFamily="@font/robotoserif_regular"
        android:text='Hãy để chúng tôi trở thành người đồng hành thấu hiểu bạn. Hệ thống phân tích AI tiên tiến sẽ học hỏi từ thói quen đọc và tìm kiếm của bạn để đưa ra những gợi ý sách "chuẩn gu" nhất.'
        android:textAlignment="center"
        android:textColor="#CFE9FF"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!-- Ảnh chính nằm giữa -->
    <ImageView
        android:id="@+id/center_image"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/image3"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="@+id/description"
        app:layout_constraintStart_toStartOf="@+id/description"
        app:layout_constraintTop_toTopOf="@+id/description" />

    <!-- Nút Đăng ký -->
    <Button
        android:id="@+id/btn_register"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/robotoserif_bold"
        android:textColor="@color/blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_login"
        android:background="@drawable/btn_white_rounded"
        app:backgroundTint="@null"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp" />

    <!-- Nút Đăng nhập -->
    <TextView
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="@font/robotoserif_bold"
        app:layout_constraintTop_toBottomOf="@id/btn_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/btn_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/continue_as_guest"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        android:fontFamily="@font/robotoserif_regular"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>