<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <org.angmarch.views.NiceSpinner
            android:id="@+id/spSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white_background"
            android:fontFamily="@font/robotoserif_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:id="@+id/llToggleFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"
                android:textSize="14sp"
                android:text="Bộ lọc"
                android:layout_marginEnd="5dp"/>

            <ImageView
                android:id="@+id/ivFilter"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_filter"
                app:tint="@color/black"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="300"
        app:el_expanded="false"
        app:el_parallax="1"
        app:layout_constraintTop_toBottomOf="@+id/clFilter"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_filter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="16sp"
                    android:text="Bộ lọc đơn hàng"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_close"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/tvLabelDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="14sp"
                    android:text="Thời gian tạo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_filter_title"
                    />

                <LinearLayout
                    android:id="@+id/layout_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelDate">

                    <TextView
                        android:id="@+id/tvStartDate"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_edit_input"
                        android:hint="Từ ngày"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/ic_calendar_gray"
                        android:paddingHorizontal="8dp"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/bg_edit_input"
                        android:hint="Đến ngày"
                        android:gravity="center"
                        android:textSize="13sp"
                        android:textColor="@color/black"
                        android:drawablePadding="5dp"
                        app:drawableStartCompat="@drawable/ic_calendar_gray"
                        android:paddingHorizontal="8dp"
                        android:fontFamily="@font/robotoserif_regular"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvLabelStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="14sp"
                    android:text="Trạng thái đơn hàng"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/layout_date"
                    />

                <LinearLayout
                    android:id="@+id/layout_status_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelStatus">

                    <CheckBox
                        android:id="@+id/cbPending"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đang xử lý"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <CheckBox
                        android:id="@+id/cbShipping"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đang giao"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_status_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/layout_status_row1">

                    <CheckBox
                        android:id="@+id/cbCompleted"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Hoàn thành"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <CheckBox
                        android:id="@+id/cbCancelled"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đã hủy"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>
                </LinearLayout>


                <TextView
                    android:id="@+id/tvLabelTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="14sp"
                    android:text="Tổng tiền (VNĐ)"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/layout_status_row2"
                    />

                <LinearLayout
                    android:id="@+id/layout_price_row1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/tvLabelTotal">

                    <CheckBox
                        android:id="@+id/cbTotalRange1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="&lt; 500k"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <CheckBox
                        android:id="@+id/cbTotalRange2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="500k - 1tr"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_price_row2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/layout_price_row1">

                    <CheckBox
                        android:id="@+id/cbTotalRange3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="1tr - 5tr"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <CheckBox
                        android:id="@+id/cbTotalRange4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="&gt; 5tr"
                        android:textSize="13sp"
                        android:buttonTint="@color/blue"
                        android:fontFamily="@font/robotoserif_regular"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="2"
                    app:layout_constraintTop_toBottomOf="@+id/layout_price_row2">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"

                        android:text="Thiết lập lại"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textColor="@color/gray_text"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnApply"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:background="@drawable/btn_blue_rounded"
                        android:text="Áp dụng"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textColor="@color/white"/>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>
    </net.cachapa.expandablelayout.ExpandableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>