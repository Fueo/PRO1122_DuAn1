<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvLabelName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên danh mục"
        android:fontFamily="@font/robotoserif_bold"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtCategoryName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_edit_input"
        android:paddingHorizontal="12dp"
        android:hint="Nhập tên danh mục..."
        app:layout_constraintTop_toBottomOf="@id/tvLabelName" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="Lưu danh mục"
        android:fontFamily="@font/robotoserif_bold"
        android:background="@drawable/btn_blue_rounded"
        app:backgroundTint="@null"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/edtCategoryName" />

</androidx.constraintlayout.widget.ConstraintLayout>