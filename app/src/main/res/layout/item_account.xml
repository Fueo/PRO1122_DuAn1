<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:clipChildren="false"
    android:clipToPadding="false">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:background="@drawable/bg_account_card">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cvAvatar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/ic_avatar_placeholder"
                app:civ_border_color="@color/blue"
                app:civ_border_width="2dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hùng Xe Độ"
                android:fontFamily="@font/robotoserif_bold"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toEndOf="@+id/cvAvatar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tv_tag"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/bg_account_tag"
                android:fontFamily="@font/robotoserif_regular"
                android:paddingStart="17dp"
                android:paddingTop="4dp"
                android:paddingEnd="17dp"
                android:paddingBottom="4dp"
                android:layout_marginTop="5dp"
                android:text="Khách hàng"
                android:textColor="@color/blue"
                android:textSize="12sp"
                android:gravity="center_horizontal"
                app:layout_constraintStart_toEndOf="@id/cvAvatar"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <ImageView
                android:id="@+id/ivDelete"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_managedelete"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_delete"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="15dp"
                android:src="@drawable/ic_managedelete"
                android:background="@drawable/bg_button_action_red"
                android:padding="8dp"
                app:tint="#D32F2F"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_manageedit"
                android:background="@drawable/bg_button_action_blue"
                android:padding="8dp"
                app:tint="#1976D2"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                app:layout_constraintTop_toTopOf="@+id/ivDelete"
                app:layout_constraintBottom_toBottomOf="@+id/ivDelete"
                app:layout_constraintEnd_toStartOf="@+id/ivDelete"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>