<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- PHẦN CUỘN -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="80dp">

            <!-- Avatar + nút đổi -->
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivProfile"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_avatar_placeholder"
                    app:civ_border_color="@color/blue"
                    app:civ_border_width="2dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/btnChangeAvatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="6dp"
                    android:layout_marginBottom="6dp"
                    android:src="@drawable/ic_add"
                    android:background="@drawable/bg_plus_circle"
                    android:padding="6dp"
                    android:contentDescription="Đổi avatar"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <!-- ========= TÀI KHOẢN ========= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tài khoản"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên đăng nhập"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <EditText
                android:id="@+id/edtUsername"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_input"
                android:paddingHorizontal="12dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:text=""
                android:singleLine="true"
                android:fontFamily="@font/robotoserif_regular"/>

            <!-- Chức vụ -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chức vụ:"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/robotoserif_regular"/>

                <Spinner
                    android:id="@+id/spRole"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="13dp"
                    android:gravity="center_vertical"
                    android:paddingTop="5dp"
                    android:background="@drawable/bg_spinner_drop"
                    android:spinnerMode="dropdown"/>

            </LinearLayout>

            <!-- ========= ĐỔI MẬT KHẨU ========= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Đổi mật khẩu"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_bold"/>

            <!-- Mật khẩu cũ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mật khẩu cũ"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_input"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    app:boxBackgroundMode="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/blue"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtPassword"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:inputType="textPassword"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/black"
                        android:paddingVertical="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Mật khẩu cũ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Mật khẩu mới"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_input"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout

                    app:boxBackgroundMode="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/blue"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtNewPassword"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/black"
                        android:gravity="center_vertical"
                        android:padding="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!-- Mật khẩu cũ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Xác thực mật khẩu"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_edit_input"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical">

                <com.google.android.material.textfield.TextInputLayout
                    app:boxBackgroundMode="none"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:boxCornerRadiusBottomEnd="10dp"
                    app:boxCornerRadiusBottomStart="10dp"
                    app:boxCornerRadiusTopEnd="10dp"
                    app:boxCornerRadiusTopStart="10dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="@color/blue"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:inputType="textPassword"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/black"
                        android:padding="0dp"
                        android:gravity="center_vertical"
                        />
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
            <!-- ========= THÔNG TIN LIÊN HỆ ========= -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Thông tin liên hệ"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_bold"/>

            <!-- Tên -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Tên"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <EditText
                android:id="@+id/edtFullName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_input"
                android:paddingHorizontal="12dp"
                android:hint="Yolanie"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:fontFamily="@font/robotoserif_regular"/>

            <!-- Số điện thoại -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Số điện thoại"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <EditText
                android:id="@+id/edtPhone"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_input"
                android:paddingHorizontal="12dp"
                android:hint="0911 363 363"
                android:inputType="phone"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:fontFamily="@font/robotoserif_regular"/>

            <!-- Email -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Email"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_input"
                android:paddingHorizontal="12dp"
                android:hint="anhphungcanhmo123@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:fontFamily="@font/robotoserif_regular"/>

            <!-- Địa chỉ -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Địa chỉ"
                android:textSize="13sp"
                android:textColor="@color/black"
                android:fontFamily="@font/robotoserif_regular"/>

            <EditText
                android:id="@+id/edtAddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_edit_input"
                android:paddingHorizontal="12dp"
                android:hint="Số 10 Đan Phượng, Phường Đống Đa, Hà Nội"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:singleLine="true"
                android:fontFamily="@font/robotoserif_regular"/>

        </LinearLayout>
    </ScrollView>

    <!-- THANH DƯỚI + NÚT LƯU -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#C7C7C7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:text="Lưu"
            android:textAllCaps="false"
            android:fontFamily="@font/robotoserif_bold"
            android:background="@drawable/btn_blue_rounded"
            app:backgroundTint="@null"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
