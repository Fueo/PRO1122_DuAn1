<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <org.angmarch.views.NiceSpinner
            android:id="@+id/spSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginStart="8dp"
            android:backgroundTint="@color/white_background"
            android:fontFamily="@font/robotoserif_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/tv_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/robotoserif_regular"
            android:textSize="14sp"
            android:text="Bộ lọc"
            android:padding="0dp"
            app:layout_constraintEnd_toStartOf="@+id/ivFilter"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        <ImageView
            android:id="@+id/ivFilter"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_filter"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <net.cachapa.expandablelayout.ExpandableLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="300"
        app:el_expanded="false"
        app:el_parallax="1"
        app:layout_constraintTop_toBottomOf="@+id/clFilter"
        app:layout_constraintStart_toStartOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="8dp"
                android:paddingHorizontal="16dp"
                android:clipToPadding="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_category_product" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cvFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="6dp"
                app:cardUseCompatPadding="true"
                android:background="@color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/tv_filter2"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textSize="14sp"
                        android:text="Bộ lọc chi tiết"
                        android:gravity="center_vertical"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <ImageView
                        android:id="@+id/ivClose"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_close"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/tvCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textSize="14sp"
                        android:text="Trạng thái"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_filter2"
                        />

                    <LinearLayout
                        android:id="@+id/layout_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCondition"
                        app:layout_constraintStart_toStartOf="parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbSelling"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Đang bán"
                                android:fontFamily="@font/robotoserif_regular"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbNotSelling"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="Ngừng bán"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:fontFamily="@font/robotoserif_regular"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvCondition2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textSize="14sp"
                        android:text="Giá"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/layout_status"
                        />

                    <LinearLayout
                        android:id="@+id/layout_price_row1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvCondition2"
                        app:layout_constraintStart_toStartOf="parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbPrice0"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="0đ - 150k"
                                android:fontFamily="@font/robotoserif_regular"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbPrice150"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="150k - 300k"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:fontFamily="@font/robotoserif_regular"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_price_row2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/layout_price_row1"
                        app:layout_constraintStart_toStartOf="parent">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbPrice3"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="300k - 500k"
                                android:fontFamily="@font/robotoserif_regular"
                                android:textColor="#333333"
                                android:textSize="14sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_weight="1">
                            <CheckBox
                                android:id="@+id/cbPrice4"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:buttonTint="@color/blue"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:text="> 500k"
                                android:textColor="#333333"
                                android:textSize="14sp"
                                android:fontFamily="@font/robotoserif_regular"/>
                        </LinearLayout>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </net.cachapa.expandablelayout.ExpandableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>