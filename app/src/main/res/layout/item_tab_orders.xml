<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Tỷ lệ trạng thái đơn hàng"
                android:fontFamily="@font/robotoserif_bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spTimeFilterOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:textSize="13sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/robotoserif_regular"
                android:backgroundTint="@color/white"
                app:popupTextAlignment="end"
                app:arrowTint="@color/blue"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hiệu quả vận hành"
            android:fontFamily="@font/robotoserif_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:weightSum="2"
            android:layout_marginBottom="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Giao thành công"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_check_circle"
                            app:tint="@color/blue"/>

                        <TextView
                            android:id="@+id/tvStatSuccessRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85.2%"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="18sp"
                            android:textColor="@color/blue"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="6dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tỷ lệ Hủy/Hoàn"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_close"
                            app:tint="@color/red"/>

                        <TextView
                            android:id="@+id/tvStatCancelRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14.8%"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            android:layout_marginStart="6dp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chỉ số bán hàng"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_marginBottom="16dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_money"
                        app:tint="@color/blue"
                        android:contentDescription="icon_money"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Giá trị đơn trung bình"
                        android:textSize="13sp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/gray_text"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <TextView
                        android:id="@+id/tvAvgOrderValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="450.000đ"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoserif_bold"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#F0F0F0"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_statistic"
                        app:tint="@color/blue"
                        android:contentDescription="icon_trending"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Đơn hàng cao nhất"
                        android:textSize="13sp"
                        android:layout_marginStart="12dp"
                        android:textColor="@color/gray_text"
                        android:fontFamily="@font/robotoserif_regular"/>

                    <TextView
                        android:id="@+id/tvMaxOrderValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.100.000đ"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/robotoserif_bold"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View android:layout_width="match_parent" android:layout_height="20dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>