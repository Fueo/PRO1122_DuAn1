<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Xu hướng doanh thu"
                android:fontFamily="@font/robotoserif_bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <org.angmarch.views.NiceSpinner
                android:id="@+id/spTimeFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:textSize="13sp"
                android:textColor="@color/blue"
                android:fontFamily="@font/robotoserif_regular"
                android:backgroundTint="@color/white"
                app:popupTextAlignment="end"
                app:arrowTint="@color/blue"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/lineChartRevenue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chỉ số quan trọng"
            android:fontFamily="@font/robotoserif_bold"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tổng doanh thu"
                            android:fontFamily="@font/robotoserif_regular"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"/>

                        <TextView
                            android:id="@+id/tvStatTotalRevenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15.200.000đ"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="16sp"
                            android:textColor="@color/dark_blue"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tăng trưởng"
                            android:fontFamily="@font/robotoserif_regular"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="4dp">

                            <ImageView
                                android:id="@+id/ivArrow"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_arrow_up"
                                app:tint="#4CAF50"/>

                            <TextView

                            android:id="@+id/tvStatGrowth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+12.5%"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="16sp"
                            android:textColor="#4CAF50"
                            android:layout_marginStart="4dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Trung bình/đơn"
                            android:fontFamily="@font/robotoserif_regular"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"/>

                        <TextView
                            android:id="@+id/tvStatAvgOrder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="145.000đ"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Đơn hoàn thành"
                            android:fontFamily="@font/robotoserif_regular"
                            android:textSize="12sp"
                            android:textColor="@color/gray_text"/>

                        <TextView
                            android:id="@+id/tvStatTotalSuccess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="84 đơn"
                            android:fontFamily="@font/robotoserif_bold"
                            android:textSize="16sp"
                            android:textColor="@color/blue"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nguồn doanh thu"
                    android:fontFamily="@font/robotoserif_bold"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="12dp">

                    <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Tiền mặt (COD)"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>

                    <ProgressBar
                        android:id="@+id/progressCOD"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="65"
                        android:progressTint="@color/blue"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvPercentCOD"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="65%"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="Chuyển khoản"
                        android:textSize="12sp"
                        android:textColor="@color/gray_text"/>

                    <ProgressBar
                        android:id="@+id/progressBanking"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progress="35"
                        android:progressTint="#FF9800"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tvPercentBanking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35%"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="@color/black"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <View android:layout_width="match_parent" android:layout_height="20dp"/>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>