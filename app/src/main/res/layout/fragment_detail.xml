<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="?attr/actionBarSize">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">
            <ImageView
                android:id="@+id/ivImage"
                android:layout_width="250dp"
                android:layout_height="280dp"
                android:layout_marginTop="24dp"
                android:contentDescription="Bìa sách"
                android:src="@drawable/book_cover_placeholder"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/iv_heart_icon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="4dp"
                android:contentDescription="Yêu thích"
                android:src="@drawable/ic_heart"
                app:tint="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/tv_likes_count"
                app:layout_constraintEnd_toStartOf="@+id/tv_likes_count"
                app:layout_constraintTop_toTopOf="@+id/tv_likes_count" />

            <TextView
                android:id="@+id/tv_likes_count"
                android:fontFamily="@font/robotoserif_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="6767"
                android:textColor="@color/gray_text"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvName"
                android:fontFamily="@font/robotoserif_bold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:text="Và Rồi Chẳng Còn Ai - And Then There Were None"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_book_price"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ivImage" />

            <TextView
                android:id="@+id/tv_book_author"
                android:layout_width="0dp"
                android:fontFamily="@font/robotoserif_regular"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:text="Agatha Christie"
                android:textColor="@color/gray_text"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <TextView
                android:id="@+id/tv_book_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/robotoserif_bold"
                android:layout_marginEnd="16dp"
                android:text="75.000 VNĐ"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/tvName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tvName" />

            <LinearLayout
                android:id="@+id/ll_book_stats_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/tv_book_author"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_border_light_orange"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tv_pages_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số Trang"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_pages_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="34"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_border_light_orange"
                    android:paddingVertical="8dp"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tv_published_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xuất bản"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_published_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="16"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:background="@drawable/rounded_border_light_orange"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tv_views_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lượt xem"
                        android:fontFamily="@font/robotoserif_regular"
                        android:textColor="@color/gray_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_views_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="340"
                        android:fontFamily="@font/robotoserif_bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tab_layout_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toBottomOf="@+id/ll_book_stats_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabIndicatorColor="@color/black"
                    app:tabIndicatorHeight="2dp"
                    app:tabSelectedTextColor="@color/black"
                    app:tabTextColor="@color/gray_text"
                    app:tabRippleColor="@null"
                    app:tabMode="fixed"
                    app:tabTextAppearance="@style/CustomTabTextAppearance"
                    app:tabIndicatorFullWidth="false"
                    app:tabGravity="fill">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mô tả" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tác giả" />

                </com.google.android.material.tabs.TabLayout>

                <View
                    android:layout_marginLeft="17dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="2dp"
                    android:layout_height="1dp"
                    android:background="@color/gray" />
            </LinearLayout>
            <TextView
                android:id="@+id/tv_description_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/robotoserif_regular"
                android:lineSpacingExtra="4dp"
                android:text="@string/long_description_text"
                android:textColor="#333333"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout_container" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/bottom_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@color/gray"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="bottom">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_add_to_cart"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Thêm vào giỏ"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:paddingVertical="12dp"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/blue"
            app:icon="@drawable/ic_shopping_cart"
            app:iconTint="@color/white"
            android:fontFamily="@font/robotoserif_regular"
            android:textAllCaps="false"
            android:textSize="12dp"
            app:iconGravity="textStart" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEdit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Mua ngay"
            android:textSize="12dp"
            android:textColor="@color/blue"
            android:layout_marginStart="8dp"
            android:paddingVertical="12dp"
            app:cornerRadius="5dp"
            app:backgroundTint="@color/white"
            app:strokeColor="@color/blue"
            android:textAllCaps="false"
            app:icon="@drawable/ic_credit_card"
            app:iconTint="@color/blue"
            app:iconGravity="textStart" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>