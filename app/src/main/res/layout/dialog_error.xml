<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_dialog">

    <ImageView
        android:id="@+id/ivDialogIcon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/ic_error_x"
        android:layout_marginBottom="16dp"
        app:tint="@color/red" />

    <TextView
        android:id="@+id/tvDialogTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Oops!!!"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:fontFamily="@font/robotoserif_bold"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvDialogMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có vẻ đã xảy ra lỗi"
        android:fontFamily="@font/robotoserif_regular"
        android:textColor="@color/gray_text"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDialogConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUAY LẠI NGAY"
        android:fontFamily="@font/robotoserif_regular"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:backgroundTint="@color/blue"
        app:cornerRadius="25dp" />

</LinearLayout>
