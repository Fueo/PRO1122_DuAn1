<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Làm thanh status bar trong suốt -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Giữ icon status bar màu trắng -->
        <item name="android:windowLightStatusBar">false</item>
        <!-- (Tuỳ chọn) Làm toàn màn hình, nội dung kéo lên status bar -->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/robotoserif_medium</item>
    </style>

    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/robotoserif_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>